#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

IFS=$'\n'
PACKAGE_LOCK_REGEX="(^packages\/.*\/package-lock\.json)|(^package-lock\.json)"
PACKAGES=("$(git diff --name-only HEAD@{1} HEAD | grep -E "$PACKAGE_LOCK_REGEX")")

if [[ ${PACKAGES[@]} ]]; then
  for package in $PACKAGES; do
    echo "ðŸ“¦ $package was changed. Running npm install to update your dependencies..."
    DIR=$(dirname package)
    cd "$DIR" && npm install
    echo "ðŸ“¦ Running install script..." > ./log/build.log
  done
else
  echo "ðŸ“¦ No package-lock.json files were changed. Skipping npm install..."
  DIR=$(dirname package)
  cd "$DIR" && npm run build
  echo "ðŸ“¦ Running build script..." > ./log/build.log
fi
